// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["auth", "public", "chat", "doctor"]
}

model Profile {
  id       String  @id @default(uuid()) @db.VarChar(24)
  doctorId String? @unique @db.VarChar(24)
  userId   String? @unique @db.VarChar(24)

  RoomProfile RoomProfile[]
  Room        Room?         @relation(fields: [roomId], references: [id])
  roomId      String?       @db.VarChar(24)

  @@map("profiles")
  @@schema("chat")
}

model Room {
  id          String        @id @default(uuid()) @db.VarChar(24)
  name        String        @unique
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  profiles    Profile[]
  RoomProfile RoomProfile[]

  @@map("rooms")
  @@schema("chat")
}

model RoomProfile {
  id        String    @id @default(uuid()) @db.VarChar(24)
  profileId String    @db.VarChar(24)
  roomId    String    @db.VarChar(24)
  profile   Profile   @relation(fields: [profileId], references: [id])
  room      Room      @relation(fields: [roomId], references: [id])
  messages  Message[]

  @@map("room_profiles")
  @@schema("chat")
}

model Message {
  id            String      @id @default(uuid()) @db.VarChar(24)
  text          String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  roomProfileId String      @db.VarChar(24)
  roomProfile   RoomProfile @relation(fields: [roomProfileId], references: [id])

  @@map("messages")
  @@schema("chat")
}
